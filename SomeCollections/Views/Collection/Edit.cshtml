@model SomeCollections.ViewModels.CollectionsViewModel
@{
    ViewData["Title"] = Localizer["Header"];
}

<div class="container vh-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">@ViewBag.Name</p>

                            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
                                    <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">@Localizer["Desc"]</label>
                                    <textarea style="resize: none" type="text" asp-for="Description" class="form-control" maxlength="120">@Model.Description</textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Img">@Localizer["Image"]</label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                    <span asp-validation-for="Img" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tag" class="control-label">@Localizer["Tag"]</label>
                                    <select asp-for="Tag" class="form-control">
                                        @foreach (Tag x in ViewBag.Themes)
                                        {
                                            <option value="@x.Id">@x.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" asp-route-Id="@ViewBag.ColId" value="@Localizer["btnSave"]" class="btn btn-outline-secondary" />
                                    <a class="btn btn-outline-secondary" asp-action="Index">@Localizer["btnBack"]</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>