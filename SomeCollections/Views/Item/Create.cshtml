@model SomeCollections.ViewModels.CreateItemViewModel
@{
    ViewData["Title"] = "Создание айтема";
}

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" asp-route-Id="@ViewBag.CollectionId" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>