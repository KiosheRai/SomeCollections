@model SomeCollections.ViewModels.ItemViewModel
@{
    ViewData["Title"] = "Редактирование коллекции";
}

<div class="container vh-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">@ViewBag.Name</p>
                            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Название</label>
                                    <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Описание</label>
                                    <textarea style="resize: none" type="text" asp-for="Description" class="form-control" maxlength="120">@Model.Description</textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Img">Изображение</label>
                                    <input asp-for="Img" type="file" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" asp-route-id="@ViewBag.ItemId" value="Сохранить" class="btn btn-outline-secondary" />
                                    <a class="btn btn-outline-secondary" asp-route-id="@ViewBag.ColId" asp-action="Index">Назад</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>